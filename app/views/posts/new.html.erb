<div class="container">
  <div class="col-md-8 col-md-offset-2">
    <div class="form-area">
      <h3>Submit a Tutorial</h3>
      <%= form_for @post do |f| %>
        <div class="form-group">
          <%= f.label :category_id, "Category" %>
          <%= f.select(:category_id, Category.all.map{ |f| [f.name, f.id] }, {}, class: "form-control", id: "select") %>
        </div>
        <div class="form-group">
          <%= f.label :title, "Tutorial Topic" %>
          <%= f.text_area :title, rows: 1, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :body, "Youtube share link" %>
          <%= f.text_area :body, rows: 1, class: "form-control" %>
        </div>
        <%= f.submit class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
